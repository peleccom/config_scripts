# Machine-specific environment variables
# Copy this file to env.local and customize for your machine

# Machine name (used in prompt and logs)
export MACHINE_NAME="dev-laptop"

# Local paths
export LOCAL_WORKSPACE="$HOME/workspace"
export LOCAL_TOOLS="$HOME/tools"

# Project paths
export PROJECT_HOME="$LOCAL_WORKSPACE/projects"

# Development tools
export JAVA_HOME="/usr/lib/jvm/java-11-openjdk"
export ANDROID_HOME="$HOME/Android/Sdk"
export NODE_VERSION="16.14.0"

# Custom paths
export PATH="$LOCAL_TOOLS/bin:$PATH"

# Machine-specific settings
export DISPLAY=":0"
export EDITOR="vim"

# Proxy settings (if needed)
#export http_proxy="http://proxy.example.com:8080"
#export https_proxy="http://proxy.example.com:8080"
#export no_proxy="localhost,127.0.0.1"
